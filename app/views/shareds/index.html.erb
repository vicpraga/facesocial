<div class="container">
<div class="panel panel-default">

  <div class="panel-heading"><h1>Listing Shareds</h1></div>
  <table class="table">
  <thead>
    <tr>
      <th style="text-align: center;">User</th>
      <th style="text-align: center;">Message</th>
      <th style="text-align: center;">Shared at</th>
    </tr>
  </thead>

  <tbody>
    <% @shareds.each do |shared|
      @message = Message.find(shared.message_id)
      @user = User.find(shared.user_id)
     %>
      <tr>
        <td style="text-align: center;"><%= @user.name %></td>
        <td style="text-align: center;"><%= @message.texto %></td>
        <td style="text-align: center;"><%= shared.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


<br>
</div>