<div class="container">
<div class="panel panel-default">

  <div class="panel-heading"><h1>Listing Likes</h1></div>
  <table class="table">
  <thead>
    <tr>
      <th style="text-align: center;">User</th>
      <th style="text-align: center;">Message</th>
      <th style="text-align: center;">Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @likes.each do |like|
      @message = Message.find(like.message.id)
      @user = User.find(like.user.id)
     %>
      <tr>
        <td style="text-align: center;"><%= @user.name %></td>
        <td style="text-align: center;"><%= @message.texto %></td>
        <td style="text-align: center;"><%= like.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


<br>
</div>